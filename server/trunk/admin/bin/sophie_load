#!/bin/env perl

use Sophie::Cli;
require RPC::XML;
require RPC::XML::Client;
use Term::ReadKey;
use Getopt::Long;

GetOptions(
        'f=s' => \my $file,
        's=s' => \my $server,
);

ReadMode('noecho');
print "Enter password: ";
my $password = ReadLine(0);
ReadMode 0;
print "\n";
chomp($password);

require Data::Dumper;
my $xmlcli = RPC::XML::Client->new($server || 'http://sophie.zarb.org/rpc');

my $res = $xmlcli->send_request('login', 'admin', $password);
if (ref $res) {
    $xmlcli->request->header('cookie', $$res);
} else {
    die "Can't login";
}

my $string;
if ($file) {
    open($handle, '<', $file) || die "can't open file $!";
    $string = join('', <$handle>);
    close($handle);
} else {
    $string = join('', <STDIN>);
}

my $res = $xmlcli->send_request('admin.load_distrib', $string);
print $res->value;
