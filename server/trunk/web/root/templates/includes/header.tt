    <script type="text/javascript" language="JavaScript" src="[% c.uri_for('/static', 'dragdrop.js') %]"></script>
    <script type="text/javascript" language="JavaScript" src="[% c.uri_for('/static', 'controls.js') %]"></script>
</head>
<body>

    <div id="sophie_header">
    <img src="[% c.uri_for('/static', 'sophie.png') -%]" style="float:left">
    <div style="float:left">
        <p id="sitename">Sophie</p>
        <p id="sophie_menu">
        <span><a href="[% c.uri_for('/search/adv') %]">Search</a></span>
        <span><a href="[% c.uri_for('/distrib') %]">Distribution</a></span>
        <span><a href="[% c.uri_for('/explorer') %]">Explorer</a></span>
        </p>
